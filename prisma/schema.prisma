generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Order {
  id String @id @default(cuid())

  // The `createdAt` and `updatedAt` fields are managed by Prisma Client
  
  publicId String @unique
  total     Int

  // order details
  // items OrderItem[]

  orderDetails String

  status String
}

